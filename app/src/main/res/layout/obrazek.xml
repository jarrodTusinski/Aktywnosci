<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/obrazekText"
        android:text="Obrazek"
        android:textSize="50sp"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/android"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="change"
        android:id="@+id/changePicToRed"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:onClick="changePictureToRed"
        >
    </Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Powrot"
        android:id="@+id/backToMain"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:layout_toLeftOf="@id/changePicToRed"
        android:onClick="backToMain"
        >
    </Button>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Poprzedni"
        android:id="@+id/changePicToGreen"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:layout_toRightOf="@id/changePicToRed"
        android:onClick="changePictureToGreen"
        >
    </Button>
</RelativeLayout>